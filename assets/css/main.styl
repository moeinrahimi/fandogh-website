@import "variables.styl"

// fonts
@font-face
  font-family yekan
  font-style normal
  src url('~/assets/fonts/yekan-regular.ttf')

@font-face
  font-family yekan-light
  font-style normal
  src url('~/assets/fonts/iranyekanweblight.ttf') 

html
  background-image: linear-gradient(to left, #0f0050, #160074) !important;
  
.container
    margin-right: auto
    margin-left: auto
    padding-left:  15px
    padding-right: 15px
    padding-bottom 90px

    @media (min-width: 768px) { width: 750px; }
    @media (min-width: 1024px) { width: 970px; }
    @media (min-width: 1200px) { width: 1170px; }

li              
  list-style: none
p, h1, h2, button, span, a, button, li, label
  font-family yekan, sans-serif
  color white
p, button
  font-size font-small
p
  line-height 1.88
h1, h2
  font-size font-big
  line-height 1.8

a 
 text-decoration none 
   
input
  font-size font-small
  color #000
input::placeholder
  color gray
  font-family yekan, sans-serif
  font-size: font-small
.img-responsive
  width 100%

h2.title 
  color white 
  margin 0
  padding 20px 0
  text-align center
  font-size 30px

p.description 
  text-align center
  font-size 18px

.no-padding
  padding 0

.inner-content
  padding 0 150px

.no-line-height
  line-height 0 !important
@media (max-width: 768px )
  .no-line-height
    line-height 1.8 !important
  .inner-content
    padding 0 15px
  input, input::placeholder
    font-size font-x-small
    font-family yekan, sans-serif

.fandogh-form-group
  margin 10px 0
.center
  text-align center

.margin-5
  margin 5px
.margin-10
  margin 10px
.margin-20
  margin 20px
  
.80
  width 80%

.bounce-enter-active {
  animation: bounce-in .3s;
}
.bounce-leave-active {
  animation: bounce-in .3s reverse;
}
@keyframes bounce-in {
  0% {
    transform: scale(0);
  }
  50% {
    transform: scale(1.3);
  }
  100% {
    transform: scale(1);
  }
}